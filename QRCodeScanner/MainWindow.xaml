            <DataGrid.Columns>
                <DataGridTextColumn Header="运单号" CanUserSort="False" Binding="{Binding BatchCode}" Width="100" ElementStyle="{StaticResource DataGridTextCenter}" IsReadOnly="True"/>
                <DataGridTextColumn Header="张数" CanUserSort="False" Binding="{Binding BatchCode}" Width="100" ElementStyle="{StaticResource DataGridTextCenter}" IsReadOnly="True"/>
                <DataGridTextColumn Header="序列号" CanUserSort="False" Binding="{Binding RowNumber}" Width="50" ElementStyle="{StaticResource DataGridTextCenter}" IsReadOnly="True"/>
                --><!--<DataGridTextColumn Header="批次号" Binding="{Binding BatchCode}" Width="100" ElementStyle="{StaticResource DataGridTextCenter}" IsReadOnly="True"/>--><!--
                <DataGridTextColumn Header="发票代码" CanUserSort="False" Binding="{Binding Code}" Width="100" ElementStyle="{StaticResource DataGridTextCenter}" IsReadOnly="True"/>
                <DataGridTextColumn Header="发票号码" CanUserSort="False" Binding="{Binding Number}" Width="100" ElementStyle="{StaticResource DataGridTextCenter}" IsReadOnly="True"/>
